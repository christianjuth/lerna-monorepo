{
  "name": "lerna",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "./scripts/turbo-run-scoped.sh start",
    "build": "./scripts/turbo-run-scoped.sh build",
    "dev": "./scripts/turbo-run-scoped.sh dev",
    "prepare": "husky install",
    "lintStaged": "lint-staged",
    "test": "turbo run test:once",
    "stop-if-git-changes": "git diff-index --quiet HEAD --",
    "prerelease": "yarn run stop-if-git-changes && yarn build && lerna version --no-push",
    "release": "HUSKY_SKIP_HOOKS=1 lerna publish from-git --yes",
    "postrelease": "git push --follow-tags origin"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/heap": "^0.2.28",
    "@types/jest": "^27.0.3",
    "@types/uuid": "^8.3.3",
    "bonsole": "^1.0.3",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "2.4.1",
    "tsutils": "^3.21.0",
    "turbo": "*"
  },
  "lint-staged": {
    "packages/*/src/**/*.(ts|tsx|js|jsx|html|css)": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "internal-packages/*",
    "apps/*"
  ],
  "turbo": {
    "pipeline": {
      "clean": {
        "outputs": [
          "esm/**",
          "cjs/**"
        ]
      },
      "build:esm": {
        "dependsOn": [
          "clean",
          "^build:esm"
        ],
        "outputs": [
          "esm/**"
        ]
      },
      "build:cjs": {
        "dependsOn": [
          "clean",
          "^build:cjs"
        ],
        "outputs": [
          "cjs/**"
        ]
      },
      "build": {
        "dependsOn": [
          "^build",
          "build:esm",
          "build:cjs"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test:once": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "start": {
        "cache": false
      }
    }
  },
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "expo": "44.0.0",
    "react-native": "0.64.3",
    "typescript": "^4.5.4"
  }
}
