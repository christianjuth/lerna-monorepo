{
  "name": "lerna",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "prepare": "husky install",
    "lintStaged": "lint-staged",
    "test": "lerna run jest",
    "stop-if-git-changes": "git diff-index --quiet HEAD --",
    "prerelease": "npm run stop-if-git-changes && rimraf ./packages/**/cjs/* && rimraf ./packages/**/esm/* && lerna run build",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/uuid": "^8.3.3",
    "assemblyscript": "^0.19.20",
    "bonsole": "^1.0.3",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "packages/*/src/**/*.(ts|tsx|js|jsx|html|css)": [
      "prettier --write"
    ]
  }
}
