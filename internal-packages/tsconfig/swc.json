{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "SWC",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "assembly"]
}
