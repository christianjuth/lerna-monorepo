{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "assembly"]
}
